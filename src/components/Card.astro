---
interface Props {
  title: string;

  href: string;
}

const { href, title } = Astro.props;
---

<li class="link-card hover:scale-[1.025] transition-all will-change-transform">
  <a href={href} target="_blank" class="*:size-7 grid place-content-center">
    <slot />
  </a>
</li>
<style>
  .link-card {
    position: relative;
    list-style: none;
    display: flex;
    padding: 1px;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: transparent;
    opacity: 0.8;
  }

  li {
    animation: reveal linear both;
    animation-timeline: view();
    animation-range: entry 10% cover 20%;
  }

  @keyframes reveal {
    from {
      opacity: 0;

      scale: 0.9;
    }
    to {
      opacity: 1;

      scale: 1;
    }
  }
</style>
